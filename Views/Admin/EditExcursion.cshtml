@model QuantumEvents.Models.ExcursionBooking

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Редактировать экскурсию</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f2f2f2;
            padding: 20px;
        }

        .form-container {
            max-width: 500px;
            margin: 0 auto;
            background: #fff;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }

        .btn-submit {
            background-color: #007bff;
            color: #fff;
            padding: 10px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-submit:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="booking-container">
        <h1>@ViewData["Title"]</h1>

        <form method="post" class="form-container">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>ФИО:</label>
                <input asp-for="FullName" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input asp-for="Email" type="email" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Телефон:</label>
                <input asp-for="PhoneNumber" class="form-control" required
                       pattern="\+?[0-9\s\-\(\)]{10,}" />
            </div>

            <div class="form-group">
                <label>Учебное заведение:</label>
                <input asp-for="SchoolName" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Дата экскурсии:</label>
                <input asp-for="BookingDate" type="date" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Количество человек:</label>
                <input asp-for="TimeRange" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Статус:</label>
                <select asp-for="Status" class="form-control" required>
                    <option value="Новое">Новое</option>
                    <option value="Подтверждено">Подтверждено</option>
                    <option value="Отклонено">Отклонено</option>
                </select>
            </div>

            <button type="submit" class="btn-submit">Сохранить изменения</button>
            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Назад</a>
        </form>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function() {
                // Маска для телефона
                $("#PhoneNumber").inputmask("+7(999)999-99-99");
            });
        </script>
    }
</body>
</html>
